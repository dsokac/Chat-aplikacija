<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="2"
    tools:context="hr.foi.air.t18.chatup.ConversationActivity">

    <ListView
        android:id="@+id/convMessages"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="440dp"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"/>

    <RelativeLayout
        android:layout_column="0"
        android:layout_row="1"
        android:background="#DFDFDF"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:padding="10dp">
        <EditText
            android:id="@+id/convTextBox"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:singleLine="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <Button
            android:id="@+id/convSendButton"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:text="@string/conversation_send"
            />
        <Button
            android:id="@+id/convPictureButton"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/convSendButton"
            android:layout_marginTop="7dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:text="@string/conversation_picture"
            />
    </RelativeLayout>

</GridLayout>
</RelativeLayout>